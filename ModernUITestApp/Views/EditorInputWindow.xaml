<Window x:Class="ModernUITestApp.Views.EditorInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        Topmost="True"
        Background="White">

    <!-- AllowsTransparency=False → 표준 HWND 생성 → 한글 IME 정상 동작 -->
    <Border BorderBrush="#D1D5DB" BorderThickness="1" MinWidth="230" Background="White">
        <Grid Margin="12,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="메모 편집"
                       FontSize="9" FontWeight="Bold"
                       Foreground="#9CA3AF"
                       Margin="0,0,0,6"
                       FontFamily="Malgun Gothic"/>

            <!-- Editor Box -->
            <Border Grid.Row="1" Background="#F3F4F6" CornerRadius="4" Padding="8,6">
                <TextBox x:Name="EditorTextBox"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="0"
                         FontSize="13"
                         Foreground="#1F2937"
                         CaretBrush="#3B82F6"
                         FontFamily="Malgun Gothic, Segoe UI"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MinWidth="180"
                         MaxWidth="400"
                         PreviewKeyDown="OnEditorPreviewKeyDown"/>
            </Border>

            <!-- Hint Row -->
            <StackPanel Grid.Row="2" Orientation="Horizontal"
                        HorizontalAlignment="Right" Margin="0,8,0,0">
                <Border Background="#E5E7EB" CornerRadius="2" Padding="4,1" Margin="0,0,3,0">
                    <TextBlock Text="Shift+Enter" Foreground="#6B7280" FontSize="9"/>
                </Border>
                <TextBlock Text="줄바꿈" Foreground="#9CA3AF" FontSize="9"
                           Margin="0,0,10,0" FontFamily="Malgun Gothic" VerticalAlignment="Center"/>

                <Border Background="#E5E7EB" CornerRadius="2" Padding="4,1" Margin="0,0,3,0">
                    <TextBlock Text="Enter" Foreground="#6B7280" FontSize="9"/>
                </Border>
                <TextBlock Text="저장" Foreground="#9CA3AF" FontSize="9"
                           FontFamily="Malgun Gothic" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

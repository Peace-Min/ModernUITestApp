<UserControl x:Class="ModernUITestApp.Views.GlobalEditorOverlayKR"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- COLOR PALETTE -->
        <SolidColorBrush x:Key="MenuBackColor" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="MenuBorderColor" Color="#FFE5E5E5"/>
        <SolidColorBrush x:Key="MenuItemHoverColor" Color="#FFF2F4F8"/>
        <SolidColorBrush x:Key="TextPrimaryColor" Color="#1F2937"/>
        <SolidColorBrush x:Key="TextMutedColor" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="AccentColor" Color="#3B82F6"/>
        <SolidColorBrush x:Key="DangerColor" Color="#EF4444"/>
        <SolidColorBrush x:Key="InputBackgroundColor" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="KeyCapBackgroundColor" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="KeyCapTextColor" Color="#6B7280"/>

        <!-- STYLES -->
        <Style x:Key="CalloutContainerStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="5" Opacity="0.15" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CalloutTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
            <Setter Property="CaretBrush" Value="{StaticResource AccentColor}"/>
            <Setter Property="FontFamily" Value="Malgun Gothic, Segoe UI"/> <!-- Korean Font Support -->
        </Style>

        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource MenuItemHoverColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Canvas>
        <!-- 1. MENU POPUP (Korean) -->
        <Popup x:Name="MenuPopup"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Fade"
               Placement="Absolute">
            
            <Border Background="White" BorderBrush="#E5E5E5" BorderThickness="1" CornerRadius="8" Padding="4" MinWidth="140">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="12" Direction="270" Opacity="0.1" ShadowDepth="4"/>
                </Border.Effect>
                <StackPanel>
                    <Button Style="{StaticResource MenuButtonStyle}" Click="OnEditClicked">
                        <StackPanel Orientation="Horizontal">
                            <!-- Icon -->
                            <Path Data="M14.06,9L15,9.94L5.92,19H5V18.08L14.06,9M17.66,3C17.41,3 17.15,3.1 16.96,3.29L15.13,5.12L18.88,8.87L20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18.17,3.09 17.92,3 17.66,3M14.06,6.19L3,17.25V21H6.75L17.81,9.94L14.06,6.19Z" 
                                  Fill="#555" Width="12" Height="12" Stretch="Uniform" Margin="0,0,10,0"/>
                            <TextBlock Text="내용 편집" Foreground="#333" FontFamily="Malgun Gothic" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                    <Separator Margin="0,4"/>
                    <Button Style="{StaticResource MenuButtonStyle}" Click="OnDeleteClicked">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" 
                                  Fill="{StaticResource DangerColor}" Width="12" Height="12" Stretch="Uniform" Margin="0,0,10,0"/>
                            <TextBlock Text="삭제" Foreground="{StaticResource DangerColor}" FontFamily="Malgun Gothic" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </Popup>


        <!-- EditorPopup 제거됨: 한글 IME 지원을 위해 EditorInputWindow(별도 Window)로 교체 -->

    </Canvas>
</UserControl>
